<div class="govuk-error-summary">
  <h2 class="govuk-error-summary__title">
    Are you sure you want to remove this location?
  </h2>

  <div class="govuk-error-summary__body">
    <table class="govuk-table">
      <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
          <td class="govuk-table__cell govuk-!-width-one-third">
            <%= @location_to_delete.address %>
          </td>
          <td class="govuk-table__cell govuk-!-width-one-third">
            <%= @location_to_delete.postcode %>
          </td>
        </tr>
      </tbody>
    </table>

    <%= button_to "Yes, remove this location", location_path(@location_to_delete),
                  method: :delete, class: "govuk-button red-button" %>
  </div>
</div>
