<%= link_to "Back to organisations", admin_organisations_path, class: "govuk-back-link" %>
<h1 class="govuk-heading-l">GovWifi Map of Locations</h1>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCz1cPYKamsA_ZJCygL9EY0Zq6stkazTco&callback=initMap"></script>

<div class="map"></div>

  <script>
    function initMap() {
      var map = new google.maps.Map(document.querySelector(".map"), {
        zoom: 5,
        center: {lat: 52.3555, lng:  1.1743}
      });

      setMarkers(map);
    }

    var locations = (<%= raw @coordinates.to_json %>);

    function setMarkers(map) {
      for (var i = 0; i < locations.length; i++) {

        var location = locations[i];
        var marker = new google.maps.Marker({
          position: {lat: location[0], lng: location[1]},
          map: map
        });
      }
    }
  </script>
